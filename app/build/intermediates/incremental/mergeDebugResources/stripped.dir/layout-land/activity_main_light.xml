<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity_Light"
    android:orientation="vertical"
    android:background="#C5C5CC"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_weight="1"
        android:background="#C5C5CC"
        android:orientation="horizontal"
        >

        <EditText
            android:id="@+id/tvInput"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="#C5C5CC"
            android:maxLength="20"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:gravity="right"
            android:textAlignment="gravity"
            android:layout_marginRight="16dp"
            />

        <TextView
            android:id="@+id/tvResult"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="#C5C5CC"
            android:maxLength="12"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:gravity="right"
            android:textAlignment="gravity"
            android:layout_marginRight="16dp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="73dp"
        android:layout_height="65dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_weight="1"
        android:background="#C5C5CC"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnRotate"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:onClick="onRotate"
            app:backgroundTint="#2196F3"
            app:icon="@android:drawable/ic_menu_always_landscape_portrait" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:background="#C5C5CC"
        >

        <Button
            android:id="@+id/btnSin"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="sin"
            android:onClick="onSin"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:textSize="18sp"
            app:backgroundTint="#534F4F"
            android:textColor="#FFC107"
            android:textAllCaps="false"
            />

        <Button
            android:id="@+id/btnCos"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="cos"
            android:onClick="onCos"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:textSize="18sp"
            app:backgroundTint="#534F4F"
            android:textColor="#FFC107"
            android:textAllCaps="false"
            />

        <Button
            android:id="@+id/btnTan"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="tan"
            android:onClick="onTan"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:textSize="18sp"
            app:backgroundTint="#534F4F"
            android:textColor="#FFC107"
            android:textAllCaps="false"
            />

        <Button
            android:id="@+id/btnClear"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:onClick="onClear"
            android:text="C"
            android:textSize="25sp"
            app:backgroundTint="#CD0505"
            />

        <Button
            android:id="@+id/btnBack"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:onClick="onBack"
            android:text="âŒ«"
            android:textSize="25sp"
            app:backgroundTint="#534F4F"
            />

        <Button
            android:id="@+id/btnDecimal"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="."
            android:onClick="onDecimal"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:textSize="25sp"
            app:backgroundTint="#534F4F"
            android:layout_gravity="center"
            />

        <Button
            android:id="@+id/btnDivide"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="8dp"
            android:layout_weight="1"
            android:onClick="onOperator"
            android:text="/"
            android:textSize="40sp"
            app:backgroundTint="#534F4F"
            android:textColor="#FFC107"
            android:layout_gravity="center"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:background="#C5C5CC"
        >

        <Button
            android:id="@+id/btnInverseSin"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="asin"
            android:onClick="onArcSin"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:textSize="18sp"
            app:backgroundTint="#534F4F"
            android:textColor="#FFC107"
            android:textAllCaps="false"
            />

        <Button
            android:id="@+id/btnInverseCos"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="acos"
            android:onClick="onArcCos"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:textSize="18sp"
            app:backgroundTint="#534F4F"
            android:textColor="#FFC107"
            android:textAllCaps="false"
            />

        <Button
            android:id="@+id/btnInversetan"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="atan"
            android:onClick="onArcTan"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:textSize="18sp"
            app:backgroundTint="#534F4F"
            android:textColor="#FFC107"
            android:textAllCaps="false"
            />

        <Button
            android:id="@+id/btn7"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="7"
            android:onClick="onDigit"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="5dp"
            android:textSize="25sp"
            app:backgroundTint="#534F4F"

            />

        <Button
            android:id="@+id/btn8"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="8"
            android:onClick="onDigit"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:textSize="25sp"
            app:backgroundTint="#534F4F"
            />

        <Button
            android:id="@+id/btn9"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="9"
            android:onClick="onDigit"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:textSize="25sp"
            app:backgroundTint="#534F4F"
            />

        <Button
            android:id="@+id/btnMultiply"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="8dp"
            android:layout_weight="1"
            android:onClick="onOperator"
            android:text="*"
            android:textSize="40sp"
            app:backgroundTint="#534F4F"
            android:textColor="#FFC107"
            />




    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:background="#C5C5CC"
        >

        <Button
            android:id="@+id/btnSqrt"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:onClick="onSqrt"
            android:text="âˆšx"
            android:textAllCaps="false"
            android:textColor="#FFC107"
            android:textSize="20sp"
            app:backgroundTint="#534F4F" />

        <Button
            android:id="@+id/btnSquarex"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:onClick="onSq"
            android:text="xÂ²"
            android:textAllCaps="false"
            android:textColor="#FFC107"
            android:textSize="25sp"
            app:backgroundTint="#534F4F" />

        <Button
            android:id="@+id/Cubex"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:onClick="onCube"
            android:text="xÂ³"
            android:textAllCaps="false"
            android:textColor="#FFC107"
            android:textSize="25sp"
            app:backgroundTint="#534F4F" />

        <Button
            android:id="@+id/btn4"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="4"
            android:onClick="onDigit"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="5dp"
            android:textSize="25sp"
            app:backgroundTint="#534F4F"
            />

        <Button
            android:id="@+id/btn5"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="5"
            android:onClick="onDigit"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:textSize="25sp"
            app:backgroundTint="#534F4F"
            />

        <Button
            android:id="@+id/btn6"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="6"
            android:onClick="onDigit"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:textSize="25sp"
            app:backgroundTint="#534F4F"
            />

        <Button
            android:id="@+id/btnMinus"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="8dp"
            android:layout_weight="1"
            android:onClick="onOperator"
            android:text="-"
            android:textSize="40sp"
            app:backgroundTint="#534F4F"
            android:textColor="#FFC107"
            />




    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:background="#C5C5CC"
        >

        <Button
            android:id="@+id/btnXPowerY"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:onClick="onPower"
            android:text="x^y"
            android:textAllCaps="false"
            android:textColor="#FFC107"
            android:textSize="20sp"
            app:backgroundTint="#534F4F" />

        <Button
            android:id="@+id/btnModx"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:onClick="onABS"
            android:text="|x|"
            android:textAllCaps="false"
            android:textColor="#FFC107"
            android:textSize="20sp"
            app:backgroundTint="#534F4F" />

        <Button
            android:id="@+id/btnOpenBkt"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:onClick="onDigit"
            android:text="("
            android:textColor="#FFC107"
            android:textSize="25sp"
            app:backgroundTint="#534F4F" />

        <Button
            android:id="@+id/btn1"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="1"
            android:onClick="onDigit"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="5dp"
            android:textSize="25sp"
            app:backgroundTint="#534F4F"
            />

        <Button
            android:id="@+id/btn2"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="2"
            android:onClick="onDigit"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:textSize="25sp"
            app:backgroundTint="#534F4F"
            />

        <Button
            android:id="@+id/btn3"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="3"
            android:onClick="onDigit"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:textSize="25sp"
            app:backgroundTint="#534F4F"
            />

        <Button
            android:id="@+id/btnAdd"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="8dp"
            android:layout_weight="1"
            android:onClick="onOperator"
            android:text="+"
            android:textColor="#FFC107"
            android:textSize="40sp"
            app:backgroundTint="#534F4F" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:background="#C5C5CC"
        >

        <Button
            android:id="@+id/btnEPowerx"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:onClick="onEX"
            android:text="e^x"
            android:textAllCaps="false"
            android:textColor="#FFC107"
            android:textSize="20sp"
            app:backgroundTint="#534F4F" />

        <Button
            android:id="@+id/btnLog"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:onClick="onLog"
            android:text="log"
            android:textAllCaps="false"
            android:textColor="#FFC107"
            android:textSize="18sp"
            app:backgroundTint="#534F4F" />

        <Button
            android:id="@+id/btnEndBkt"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:onClick="onDigit"
            android:text=")"
            android:textColor="#FFC107"
            android:textSize="25sp"
            app:backgroundTint="#534F4F" />

        <Button
            android:id="@+id/btn0"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="0"
            android:onClick="onDigit"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:textSize="25sp"
            app:backgroundTint="#534F4F"
            />

        <Button
            android:id="@+id/btnE"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:onClick="onE"
            android:text="e"
            android:textAllCaps="false"
            android:textSize="25sp"
            app:backgroundTint="#534F4F" />

        <Button
            android:id="@+id/btnPi"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="Ï€"
            android:onClick="onpi"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:textSize="25sp"
            app:backgroundTint="#534F4F"
            android:textAllCaps="false"
            />


        <Button
            android:id="@+id/btnEqual"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="8dp"
            android:layout_weight="1"
            android:onClick="onEqual"
            android:text="="
            android:textSize="40sp"
            app:backgroundTint="#FF5722"
            />




    </LinearLayout>


</LinearLayout>