<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Unit_Converter_Light">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#C5C5CC">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnHome"
                    android:layout_width="134dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="25dp"
                    android:layout_weight="1"
                    android:onClick="onHome"
                    android:paddingLeft="18dp"
                    android:text="Home"
                    android:textSize="17sp"
                    app:backgroundTint="#2196F3"
                    app:icon="@drawable/ic_home" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:background="#C5C5CC">

                <EditText
                    android:id="@+id/unit_input"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginBottom="10dp"
                    android:background="#C5C5CC"
                    android:gravity="right"
                    android:hint="Type value to be converted"
                    android:paddingRight="5dp"
                    android:textColorHint="#858383"
                    android:maxLength="20"
                    android:paddingVertical="10sp"
                    android:textAlignment="gravity"
                    android:textColor="@color/black"
                    android:textSize="30sp">

                </EditText>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:background="#C5C5CC">

                <TextView
                    android:id="@+id/unit_output"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:background="#C5C5CC"
                    android:maxLength="20"
                    android:textSize="30sp"
                    android:textColor="@color/black"
                    android:gravity="right"
                    android:textAlignment="gravity"
                    android:paddingVertical="10sp"
                    android:layout_marginRight="16dp"
                    android:layout_marginBottom="10dp"
                    android:hint="Converted value"
                    android:paddingRight="5dp"
                    android:textColorHint="#858383"
                    >
                </TextView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="73dp"
                android:layout_height="23dp"
                android:layout_weight="1"
                android:background="#C5C5CC"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnThemeConverter"
                    android:layout_width="42dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:onClick="onTheme"
                    android:paddingLeft="18dp"
                    app:backgroundTint="#2196F3"
                    app:icon="@drawable/ic_dark_mode" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:background="#C5C5CC">

                <Button
                    android:id="@+id/btnClear"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:onClick="onClear"
                    android:text="C"
                    android:textSize="40sp"
                    app:backgroundTint="#CD0505" />

                <Button
                    android:id="@+id/btnBack"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:onClick="onBack"
                    android:text="âŒ«"
                    android:textSize="40sp"
                    app:backgroundTint="#534F4F"
                    />

                <Button
                    android:id="@+id/btnDecimal"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="."
                    android:onClick="onDecimal"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:textSize="40sp"
                    app:backgroundTint="#534F4F"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:background="#C5C5CC">

                <Button
                    android:id="@+id/btn7"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="7"
                    android:onClick="onDigit"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="5dp"
                    android:textSize="40sp"
                    app:backgroundTint="#534F4F"

                    />

                <Button
                    android:id="@+id/btn8"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="8"
                    android:onClick="onDigit"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:textSize="40sp"
                    app:backgroundTint="#534F4F"
                    />

                <Button
                    android:id="@+id/btn9"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="9"
                    android:onClick="onDigit"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:textSize="40sp"
                    app:backgroundTint="#534F4F"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:background="#C5C5CC">

                <Button
                    android:id="@+id/btn4"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="4"
                    android:onClick="onDigit"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="5dp"
                    android:textSize="40sp"
                    app:backgroundTint="#534F4F"
                    />

                <Button
                    android:id="@+id/btn5"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="5"
                    android:onClick="onDigit"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:textSize="40sp"
                    app:backgroundTint="#534F4F"
                    />

                <Button
                    android:id="@+id/btn6"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="6"
                    android:onClick="onDigit"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:textSize="40sp"
                    app:backgroundTint="#534F4F"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:background="#C5C5CC">

                <Button
                    android:id="@+id/btn1"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="1"
                    android:onClick="onDigit"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="5dp"
                    android:textSize="40sp"
                    app:backgroundTint="#534F4F"
                    />

                <Button
                    android:id="@+id/btn2"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="2"
                    android:onClick="onDigit"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:textSize="40sp"
                    app:backgroundTint="#534F4F"
                    />

                <Button
                    android:id="@+id/btn3"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="3"
                    android:onClick="onDigit"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:textSize="40sp"
                    app:backgroundTint="#534F4F"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:background="#C5C5CC">

                <Button
                    android:id="@+id/btn0"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="0"
                    android:onClick="onDigit"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:textSize="40sp"
                    app:backgroundTint="#534F4F"
                    />

                <Button
                    android:id="@+id/btn00"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="00"
                    android:onClick="onDigit"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:textSize="40sp"
                    app:backgroundTint="#534F4F"
                    />

            </LinearLayout>


        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>


    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:menu="@menu/nav_menu_unit_converter"
        android:layout_gravity="start"
        android:fitsSystemWindows="true">

    </com.google.android.material.navigation.NavigationView>


</androidx.drawerlayout.widget.DrawerLayout>